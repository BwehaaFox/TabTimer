{{page-title "TabTimer"}}

<TabTimer
  @tabs={{this.tabs}}
  @onAddTab={{this.addTab}}
  @onToggleTimer={{this.toggleTimer}}
  @onOpenSettings={{this.openSettings}}
  @showSettingsModal={{this.showSettingsModal}}
  @activeSettingsTab={{this.activeSettingsTab}}
  @onCloseSettings={{this.closeSettings}}
  @onUpdateTabName={{this.updateTabName}}
  @onUpdateTabTime={{this.updateTabTime}}
  @onUpdateTabBackgroundColor={{this.updateTabBackgroundColor}}
  @onUpdateTargetDateTime={{this.updateTabTargetDateTime}}
  @onUpdateTabCycleDuration={{this.updateTabCycleDuration}}
  @onUpdateTargetTimeOfDay={{this.updateTabTargetTimeOfDay}}
  @onDeleteTab={{this.deleteTab}}
  @onOpenConfirmDeleteModal={{this.openConfirmDeleteModal}}
  @onDragStart={{this.handleDragStart}}
  @onDragOver={{this.handleDragOver}}
  @onDragEnter={{this.handleDragEnter}}
  @onDrop={{this.handleDrop}}
  @onReorderTabs={{this.reorderTabs}}
/>

<ConfirmDeleteModal
  @isOpen={{this.showConfirmDeleteModal}}
  @tab={{this.tabToDelete}}
  @onConfirm={{this.confirmDeleteTab}}
  @onCancel={{this.closeConfirmDeleteModal}}
/>