{
  "appId": "com.example.tabtimer",
  "productName": "TabTimer",
  "directories": {
    "output": "release"
  },
  "files": [
    "electron/**/*",
    "dist/**/*",
    "package.json"
  ],
  "win": {
    "target": "nsis",
    "icon": "electron/assets/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "extraResources": [
    {
      "from": "electron/assets/icon.png",
      "to": "assets/icon.png"
    }
  ]
}